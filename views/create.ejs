<html>
    <head>
        <%- include("./partials/header.ejs")%>
    </head>
    <body>
        <%- include("./partials/nav.ejs")%>

        <% if (error) { %>
            <div class="alert">
              <%= error %>
            </div>
        <% } %>

        <div class="createScore">
            <form action="/score" method="POST">
                <label for="projectname">Project name:</label>
                <input type="text" id="pname" required name="projectName"><br><br>
                <label for="score">Score:</label>
                <input type="number" id="score" required name="score"><br><br>
                <label for="description">Description:</label>
                <textarea type="text" id="desc" required name="description"></textarea><br><br>
                <button>Submit</button>
            </form>
        </div>
    </body>
</html>